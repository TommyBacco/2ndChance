<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_user_avatar"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/user_icon"
        android:layout_marginTop="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"/>

    <TextView
        android:id="@+id/nav_user_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/profile_fullname"
        android:maxLines="1"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/profile_fullname"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/myColorTextIcons"
        android:textColorHint="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/profile_nickname"
        android:maxLines="1"
        android:text="@string/profile_nickname"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorHint="@android:color/white" />

    <TextView
        android:id="@+id/nav_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/profile_email"
        android:maxLines="1"
        android:text="@string/profile_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</LinearLayout>
