<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/logo_app"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/l_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/message_login"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_message"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/myColorSecondaryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/message_login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_message_error"
            android:gravity="center"
            android:textColor="@color/myColorSecondaryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/sign_in_button"
            android:textAllCaps="true"
            android:backgroundTint="@color/myColorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/message_login"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>